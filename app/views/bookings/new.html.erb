<%= render "shared/header" %>

<main class="background">
  <div class="container">
    <div class="row">

<!--------------クリッカブルマップ-------------->
      <div class="my-4 col-lg-6">
        <div class="form-box">
          <div class="title-text col-lg-8"><p class="display-5">ブッキング投稿</p></div>
          <%= render "shared/map"%>
        </div>
      </div>

<!--------------ブッキング投稿フォーム-------------->
      <div class="my-4 col-lg-6" >
        <div class="form-box">
          <%= form_with model: @booking, local: true do |f| %>

            <%# 地域、ジャンルの選択 %>
            <div class="form-row d-md-flex">
              <div class="my-3 col-5">
                <label class="form-text mb-2">地域</label>
                <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class: "form-select", id:"test-prefecture"}) %>
              </div>
              <div class="my-3 mx-md-5 col-5">
                <label class="form-text mb-2">ジャンル</label>
                <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class: "form-select"}) %>
              </div>
            </div>

            <%# 開催期間の選択 %>
            <div class="form-row d-md-flex">
              <div class="mb-3 col-5">
              <label class="form-text mb-2">開催期間（開始）</label>
                <%= f.date_field :date_start, class: 'form-control',value: (Time.now.strftime("%Y-%m-%d")) %>
              </div>
              <div class="mb-3 mx-md-5 col-5">
            <label class="form-text mb-2">開催期間（終了）</label>
                <%= f.date_field :date_end, class: 'form-control',value: (Time.now.strftime("%Y-%m-%d")) %>
              </div>
            </div>

            <%# 会場の入力 %>
            <div class="mb-3">
              <label class="form-text mb-2">会場</label>
              <%= f.text_field :venue, class:"form-control", id:"", placeholder:"未定の場合は「未定」と記入してください", maxlength:"40" %>
            </div>

            <%# 詳細の入力 %>
            <div class="mb-3">
              <label class="form-text mb-2">詳細</label>
              <%= f.text_area :detail, class:"form-control", rows: 8, placeholder:"未定の場合は「未定」と記入してください" %>
            </div>

            <%# 投稿ボタン %>
            <div class='actions'>
              <%= f.submit "投稿" ,class:"btn btn-primary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
<!--------------end-------------->
    </div>
  </div>
</main>



<%= render "shared/footer" %>