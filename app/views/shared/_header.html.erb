<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/" title="トップページへ戻ります">Band Bond</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-------------------ログインしている場合------------------->
    <% if user_signed_in?%>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" id="navbar_booking" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              ブッキング
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to '新規投稿', new_booking_path, class: "dropdown-item" %></li>
              <li><a class="dropdown-item" id="booking_history" data-bs-toggle="modal" data-bs-target="#myBookingModal">投稿履歴</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" id="navbar_chat" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              チャット
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" id="chat_history" data-bs-toggle="modal" data-bs-target="#myRoomModal">チャット履歴</a></li>
            </ul>
          </li>
          <%= render "shared/header_search" %>
        </ul>
      </div>
      <ul class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout nav-link active", id: "navbar_logout" %>
        </li>
        <li class="nav-item" data-bs-toggle="modal" data-bs-target="#profileModal">
          <%= link_to current_user.nickname, "#", class: "user-nickname nav-link active" %>
