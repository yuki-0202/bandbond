        <li class="nav-item">
          <%= link_to '新規登録', new_user_registration_path, class: "sign-up nav-link active" %>
        </li>
      </ul>
    <% end %>
    <!-------------------ここまで------------------->

    <!-- Modal（プロフィール詳細） -->
    <%= render "shared/m_profile" %>

    <!-- Modal（投稿履歴） -->
    <%= render "shared/m_my_booking" %>

    <!-- Modal（チャット履歴） -->
    <%= render "shared/m_my_room" %>

    <!-- Modal（ログイン案内） -->
    <%= render "shared/m_login" %>
  </div>
</nav>


