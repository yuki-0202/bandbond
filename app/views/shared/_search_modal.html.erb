<!-- Modal（ブッキング検索） -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ブッキング検索</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <%= search_form_for @q, url: search_bookings_path, html: {id: "detailed-search-form"} do |f| %>

          <div class="search-field">
            <%= f.label :area_id_eq, '地域' %>
            <br>
            <%= f.collection_select(:area_id_eq, Area.all, :id, :name, {include_blank: "---"}) %>
          </div>

          <div class="search-field">
            <%= f.label :genre_id_eq, 'ジャンル' %>
            <br>
            <%= f.collection_select(:genre_id_eq, Genre.all, :id, :name, {include_blank: "---"}) %>
          </div>

          <div class="search-field">
            <%= f.label :venue_cont, '会場名' %>
            <br>
            <%= f.text_field :venue_cont, placeholder: '会場名' %>
          </div>

          <%= f.submit '検索' %>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">もどる</button>
      </div>
    </div>
  </div>
</div>