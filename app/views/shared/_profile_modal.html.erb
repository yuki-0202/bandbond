<!-- Modal（マイプロフィール詳細） -->
<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <% if user_signed_in? %>
        <div class="modal-header">
          <h5 class="modal-title" id="profileModalLabel"><%= current_user.nickname %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">

          <div class="profile-image-box">
            <%= image_tag 'profile_image.jpg', class: "profile-image"%>
          </div>

          <div class="profile-detail">
            <p>登録日：<%= current_user.created_at.strftime('%Y/%m/%d') %></p>
            <% if current_user.birthday.present? %>
              <p>年齢：<%= (Date.today.strftime("%Y%m%d").to_i - current_user.birthday.to_i) / 10000 %></p>
            <% else %>
              <p>年齢：</p>
            <% end %>
            <p>性別：<%= current_user.sex_id %></p>
            <p>地域：<%= current_user.area_id %></p>
            <p>パート：<%= current_user.part_id %></p>
            <p>ジャンル：<%= current_user.genre_id %></p>
            <p>自己紹介/メッセージ　▼</p>
            <p><%= current_user.introduction %></p>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">編集する</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
